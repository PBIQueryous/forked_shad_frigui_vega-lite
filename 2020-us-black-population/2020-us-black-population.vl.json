{
  "padding": {"top": 20, "left": 20, "right": 80},
  "background": "black",
  "vconcat": [
    {
      "width": 900,
      "height": 600,
      "projection": {"type": "albersUsa"},
      "layer": [
        {
          "params": [
            {
              "name": "highlight",
              "select": {"type": "point", "on": "mouseover"}
            }
          ],
          "data": {
            "url": "us-10m.json",
            "format": {"type": "topojson", "feature": "counties"}
          },
          "transform": [
            {
              "lookup": "id",
              "from": {
                "data": {"url": "2020-us-black-population-data.csv"},
                "key": "id",
                "fields": ["county", "state", "percent of total population"]
              }
            }
          ],
          "mark": "geoshape",
          "title": {
            "anchor": "start",
            "align": "left",
            "text": ["BLACK AMERICAN", "POPULATION", "in the U.S."],
            "font": "georgia",
            "fontSize": 40,
            "color": "white",
            "subtitlePadding": 30,
            "subtitle": [
              "In 2020, the Black or African American alone population (41.1 million)",
              "accounted for 12.4% of all people living in the United States,",
              "compared with 38.9 million and 12.6% in 2010."
            ],
            "subtitleFont": "calibri",
            "subtitleFontSize": 15,
            "subtitleFontWeight": "lighter",
            "subtitleColor": "white"
          },
          "encoding": {
            "color": {
              "field": "percent of total population",
              "type": "quantitative",
              "scale": {"scheme": "darkred"},
              "legend": {
                "orient": "none",
                "legendX": 610,
                "legendY": 570,
                "direction": "horizontal",
                "gradientLength": 300,
                "title": "Percentage of Black Population by County",
                "titleFont": "segoe ui",
                "titleFontSize": 11,
                "titleFontWeight": "lighter",
                "titleColor": "white",
                "titleLimit": 300,
                "labelFont": "segoe ui",
                "labelFontSize": 10,
                "labelColor": "white",
                "format": "%"
              },
              "condition": {
                "param": "highlight",
                "empty": false,
                "value": "grey"
              }
            },
            "tooltip": [
              {"field": "county", "type": "nominal", "title": "County"},
              {"field": "state", "type": "nominal", "title": "State"},
              {
                "field": "percent of total population",
                "type": "nominal",
                "title": "Black Population",
                "format": ".1%"
              }
            ]
          }
        },
        {
          "data": {
            "url": "us-10m.json",
            "format": {"type": "topojson", "feature": "states"}
          },
          "mark": {
            "type": "geoshape",
            "fill": null,
            "stroke": "lightgrey",
            "strokeWidth": 0.2
          }
        }
      ]
    },
    {
      "height": 5,
      "mark": "text",
      "title": {
        "anchor": "start",
        "text": ["Source: US Census Bureau, June 2020", "Graphic: @shadfrigui"],
        "font": "segoe ui",
        "fontSize": 10,
        "fontWeight": "lighter",
        "color": "white"
      }
    }
  ]
}