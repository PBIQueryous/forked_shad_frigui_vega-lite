{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "data": {"url": "du-bois-challenge-2022-graph-7-data.csv"},
  "vconcat": [
    {
      "width": 750,
      "title": {
        "text": "Conjugal condition of American Negroes according to age periods.",
        "font": "Corgar",
        "fontSize": 22,
        "fontWeight": "lighter",
        "subtitlePadding": 25,
        "subtitle": [
          "Condition conjugale des Nègres Américans au point de vue de l'âge.",
          "Done by Atlanta University."
        ],
        "subtitleFont": "Corgar",
        "subtitleFontSize": 15,
        "subtitleFontWeight": "lighter",
        "subtitleLineHeight": 35
      },
      "mark": "text"
    },
    {
      "concat": [
        {
          "width": 375,
          "height": 750,
          "title": {
            "offset": -9,
            "text": "MALES.",
            "font": "Agency FB",
            "fontSize": 19
          },
          "layer": [
            {
              "transform": [{"filter": {"field": "Gender", "equal": "Male"}}],
              "mark": {"type": "bar"},
              "encoding": {
                "x": {
                  "field": "Percentage",
                  "type": "quantitative",
                  "sort": "descending",
                  "axis": {
                    "labelOffset": {"expr": "datum.value == 100 ? -6 : 0"}
                  }
                },
                "y": {
                  "field": "Age Group",
                  "type": "ordinal",
                  "sort": "descending",
                  "scale": {"paddingInner": 0},
                  "axis": {"titleX": -30}
                },
                "color": {
                  "field": "MSID",
                  "type": "ordinal",
                  "scale": {
                    "domain": [1, 2, 3],
                    "range": ["#004DA6", "#C80B37", "#1F8256"]
                  },
                  "legend": null
                }
              }
            },
            {
              "data": {"values": [{}]},
              "mark": {
                "type": "text",
                "angle": 310,
                "text": "SINGLE",
                "font": "Agency FB",
                "fontSize": 25,
                "fontWeight": "bolder"
              },
              "encoding": {"x": {"value": 240}, "y": {"value": 637}}
            },
            {
              "data": {"values": [{}]},
              "mark": {
                "type": "text",
                "angle": 310,
                "text": "MARRIED",
                "font": "Agency FB",
                "fontSize": 25,
                "fontWeight": "bolder"
              },
              "encoding": {"x": {"value": 165}, "y": {"value": 345}}
            },
            {
              "data": {"values": [{}]},
              "mark": {
                "type": "text",
                "angle": 290,
                "text": "WIDOWED",
                "font": "Agency FB",
                "fontSize": 20,
                "fontWeight": "bolder"
              },
              "encoding": {"x": {"value": 25}, "y": {"value": 85}}
            }
          ]
        },
        {
          "width": 375,
          "height": 750,
          "title": {
            "offset": -9,
            "text": "FEMALES.",
            "font": "Agency FB",
            "fontSize": 19
          },
          "layer": [
            {
              "transform": [{"filter": {"field": "Gender", "equal": "Female"}}],
              "mark": {"type": "bar"},
              "encoding": {
                "x": {
                  "field": "Percentage",
                  "type": "quantitative",
                  "axis": {
                    "labelOffset": {"expr": "datum.value == 100 ? 7 : 0"}
                  }
                },
                "y": {
                  "field": "Age Group",
                  "type": "ordinal",
                  "sort": "descending",
                  "scale": {"paddingInner": 0},
                  "axis": {"orient": "right", "titleX": 30}
                },
                "color": {
                  "field": "MSID",
                  "type": "ordinal",
                  "scale": {
                    "domain": [1, 2, 3],
                    "range": ["#004DA6", "#C80B37", "#1F8256"]
                  },
                  "legend": null
                }
              }
            },
            {
              "data": {"values": [{}]},
              "mark": {
                "type": "text",
                "angle": 50,
                "text": "SINGLE",
                "font": "Agency FB",
                "fontSize": 25,
                "fontWeight": "bolder"
              },
              "encoding": {"x": {"value": 130}, "y": {"value": 635}}
            },
            {
              "data": {"values": [{}]},
              "mark": {
                "type": "text",
                "angle": 50,
                "text": "MARRIED",
                "font": "Agency FB",
                "fontSize": 25,
                "fontWeight": "bolder"
              },
              "encoding": {"x": {"value": 200}, "y": {"value": 340}}
            },
            {
              "data": {"values": [{}]},
              "mark": {
                "type": "text",
                "angle": 70,
                "text": "WIDOWED",
                "font": "Agency FB",
                "fontSize": 20,
                "fontWeight": "bolder"
              },
              "encoding": {"x": {"value": 345}, "y": {"value": 150}}
            }
          ]
        }
      ]
    },
    {
      "title": {
        "dx": 367,
        "text": "PER CENTS.",
        "font": "Agency FB",
        "fontSize": 16
      },
      "mark": "text"
    },
    {
      "height": 5,
      "title": {
        "dx": -50,
        "anchor": "start",
        "text": ["#DuBoisChallenge2022", "Graphic: @shadfrigui"],
        "font": "Segoe UI",
        "fontSize": 13,
        "fontWeight": "lighter",
        "lineHeight": 20
      },
      "mark": "text"
    }
  ],
  "config": {
    "padding": {"top": 40, "left": 20, "right": 20},
    "background": "#DBD1C2",
    "axis": {
      "gridColor": "black",
      "ticks": false,
      "labelFont": "Agency FB",
      "labelFontWeight": "bolder"
    },
    "axisXQuantitative": {
      "gridOpacity": {"expr": "(datum.value % 10) == 0 ? 0.3 : 0.1"},
      "tickCount": 50,
      "labelPadding": 2,
      "labelExpr": "(datum.value % 10) == 0 ? datum.value : ''",
      "labelFontSize": 13,
      "labelColor": {"expr": "datum.value == 0 ? '' : 'black'"},
      "title": null,
      "zindex": 1
    },
    "axisYDiscrete": {
      "grid": true,
      "tickBand": "extent",
      "gridOpacity": 0.3,
      "labelPadding": 10,
      "labelOffset": -20,
      "labelFontSize": 16,
      "title": "AGES.",
      "titleAngle": 0,
      "titleY": 14,
      "titleFont": "Agency FB",
      "titleFontSize": 15,
      "titleFontWeight": "bolder",
      "zindex": 1
    },
    "concat": {"spacing": -1}
  }
}